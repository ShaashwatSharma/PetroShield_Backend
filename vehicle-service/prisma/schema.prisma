generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id                String   @id @default(uuid())
  name              String
  model             String?
  registrationNumber String?
  driverKcId        String? 
  managerKcId       String?
  sensors           Sensor[]
}

model Sensor {
  id          String   @id @default(uuid())
  name        String
  type        String?
  description String?
  vehicleId   String?
  vehicle     Vehicle? @relation(fields: [vehicleId], references: [id])
}
